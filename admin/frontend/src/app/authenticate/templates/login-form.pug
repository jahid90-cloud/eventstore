extends ../../common-templates/layout

block content
  h1 Log in
  if errors
    .alert.alert-danger Incorrect email or password. Please try again.
  form(action="/auth/log-in" method="POST")
    .form-group
      label(for="email") Email
      input#email.form-control(type="email" name="email" placeholder="email" required)
    .form-group
      label(for="password") Password
      input#password.form-control(type="password" name="password" placeholder="password" required)
    button(type="submit") Log in!